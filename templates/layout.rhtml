<!doctype html>
<html>
  <head>

    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/solarized-dark.css">

    <link rel="alternate" type="application/atom+xml" title="<%= title %> - feed" href="/index.xml" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="<%= @context[:description] %>" />
    <meta property="og:image" content="<%= "#{@config[:url]}images/thumb_moustache.png" %>" />
    <link rel="shortcut icon" href="/images/mustache.ico" type="mage/vnd.microsoft.icon"/>
    <link rel="image_src" href="/images/thumb_moustache.png" />

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="/js/jquery.rotate.js"></script>
    <script type="text/javascript" src="/js/base.js"></script>
    <script type="text/javascript" src="/js/rainbow.js"></script>
    <title>
    <% if @path == 'index' %>
     <%= I18n.t("title") %>
    <% elsif @path.split('/').compact.length == 4 %>
      <%= title %> - <%= I18n.t("title") %>
    <% else %>
      <%= @path.capitalize.gsub(/[-]/, ' ') %> - <%= I18n.t("title") %>
    <% end %>
  </title>
  </head>
  <body>
    <div class="header">
      <img class="header-mustache" data-angle="0" src="/images/mustachet.png" height="33" width="120" alt="">
      <h1><a href="/"><%= I18n.t("title") %></a></h1>
      <img class="header-mustache" data-angle="0" src="/images/mustachet.png" height="33" width="120" alt="">
    </div>

    <section id="main">
      <%= yield %>
    </section>

    <footer>

    </footer>
  </body>
